FROM nginx:latest

ARG mycroft_domain

RUN apt-get update && \
    apt-get install -y \
        curl \
        dnsutils \
        wait-for-it \
        openssl && \
    rm -rf /etc/nginx/conf.d/default.conf
ADD reverse-proxy.conf /etc/nginx/conf.d/reverse-proxy.conf

# Setup self signed certificate
# https://www.digitalocean.com/community/tutorials/how-to-create-a-self-signed-ssl-certificate-for-nginx-in-ubuntu-16-04
RUN openssl req -x509 -nodes -days 365 -newkey rsa:2048 \
  -keyout /etc/ssl/private/nginx-selfsigned.key \
  -out /etc/ssl/certs/nginx-selfsigned.crt \
  -subj "/C=GB/ST=London/L=London/O=Global Security/OU=IT Department/CN=${mycroft_domain}" && openssl dhparam -out /etc/ssl/certs/dhparam.pem 2048 && mkdir -p /etc/nginx/snippets && echo "ssl_certificate /etc/ssl/certs/nginx-selfsigned.crt;" >> /etc/nginx/snippets/self-signed.conf && echo "ssl_certificate_key /etc/ssl/private/nginx-selfsigned.key;" >> /etc/nginx/snippets/self-signed.conf
ADD ssl-params.conf /etc/nginx/snippets/ssl-params.conf

#CMD nginx-debug -g 'daemon off;'
